# Настройки сервера
NODE_ENV=development
PORT=3000
HOST=localhost

# Настройки базы данных PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ant_support
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# Настройки CORS
CORS_ORIGIN=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Настройки JWT токенов (если будет аутентификация)
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Настройки загрузки файлов
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/svg+xml,video/mp4

# Настройки логирования
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Настройки rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Настройки для работы с медиа файлами
MEDIA_STORAGE_PATH=uploads
MEDIA_BASE_URL=http://localhost:3000/media

# Настройки резервного копирования
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Настройки уведомлений (опционально)
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Настройки мониторинга
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Настройки кэширования
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Настройки безопасности
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
TRUST_PROXY=false

# Настройки для разработки
DEBUG_SQL=false
DEBUG_ROUTES=false
